<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <ImageView
        android:id="@+id/person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_person"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        />


    <TextView
        android:id="@+id/hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello, Asep"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        app:layout_constraintStart_toEndOf="@id/person"
        android:layout_marginLeft="10dp"
        android:paddingTop="12dp"
        android:textColor="#333333"/>

    <ImageView
        android:id="@+id/mainimage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/main"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/person"
        app:layout_constraintTop_toBottomOf="@id/person"
        />

    <TextView
        android:id="@+id/store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Store"
        android:textSize="20sp"
        android:textColor="#FF733F0E"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:layout_marginTop="30px"
        android:layout_marginLeft="30px"
        app:layout_constraintStart_toStartOf="@id/mainimage"
        app:layout_constraintTop_toBottomOf="@id/mainimage"/>

    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cihampelas"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textColor="#FF733F0E"
        android:textSize="20sp"
        android:layout_marginTop="30px"
        android:layout_marginRight="30px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mainimage" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textSize="20sp"
        android:textColor="#FF733F0E"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:layout_marginTop="30px"
        android:layout_marginLeft="30px"
        app:layout_constraintStart_toStartOf="@id/mainimage"
        app:layout_constraintTop_toBottomOf="@id/store"/>

    <ImageView
        android:id="@+id/maps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_maps"
        android:layout_marginTop="30px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/find_maps"
        app:layout_constraintTop_toBottomOf="@id/city" />

    <TextView
        android:id="@+id/find_maps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find on Maps"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textColor="#FF733F0E"
        android:textSize="20sp"
        android:layout_marginTop="30px"
        android:layout_marginRight="90px"
        app:layout_constraintEnd_toEndOf="@id/maps"
        app:layout_constraintTop_toBottomOf="@id/city" />

    <Button
        android:id="@+id/button_menu"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/seeMenu"
        android:backgroundTint="#D52F2F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/location"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>